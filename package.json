{
  "name": "game-engine",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "build-ts": "tsc && npm run copy-public-files",
    "build": "npm run build-ts && npm run lint",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint --quiet --fix",
    "run-once": "node dist/index.js",
    "start": "node dist/index.js",
    "test": "jest --forceExit --coverage --verbose",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node-debug\"",
    "watch-node": "nodemon --watch dist --ext js --ignore dist/public/ dist/index.js",
    "watch-node-debug": "nodemon --watch dist --ext js --ignore dist/public/ --inspect dist/index.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "concurrently -k -p \"[{name}]\" -n \"TSC,Nodemon\" -c \"cyan.bold,green.bold,yellow.bold\" \"tsc -w\" \"nodemon --watch src/public --ext * --exec \\\"npm run copy-public-files\\\"\"",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold,yellow.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "copy-public-files": "robocopy \"src/public\" \"dist/public\" /e /z /xf *.js *.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dinhero21/game-engine.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "@types/socket.io-client": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "express": "^4.18.2",
    "nodemon": "^2.0.20",
    "simplex-noise": "^4.0.1",
    "socket.io": "^4.6.1",
    "tiny-typed-emitter": "^2.1.0",
    "tsc-hooks": "^1.1.1"
  },
  "bugs": {
    "url": "https://github.com/Dinhero21/game-engine/issues"
  },
  "homepage": "https://github.com/Dinhero21/game-engine#readme"
}
